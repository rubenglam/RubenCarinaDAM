<Window x:Class="Serveis.Penjat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Serveis.Penjat"
        mc:Ignorable="d" WindowStyle="ToolWindow"
        Title="Penjat" Height="450" Width="800">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" Name ="lblParaula" 
               Margin="10" FontSize="24"/>
        <DockPanel DockPanel.Dock="Bottom"
                    Background="AliceBlue" HorizontalAlignment="Stretch">
            <Button Name="btnNewGame" Click="BtnNouJoc_Click" Content="Nou Joc" 
                    Margin="5,10,10,10" Padding="10,4" HorizontalAlignment="Right" DockPanel.Dock="Right"/>
            <Button Name="btnEnviar" Click="BtnEnviar_Click" Content="Enviar" 
                    Margin="5,10,10,10" Padding="10,4" HorizontalAlignment="Right" DockPanel.Dock="Right"/>
            <TextBox Name="tbxLletra" HorizontalAlignment="Stretch"
                     Margin="10" HorizontalContentAlignment="Center" 
                     VerticalContentAlignment="Center"/>
        </DockPanel>
        <Image Name="imgPenjat" DockPanel.Dock="Bottom"/>
    </DockPanel>
</Window>
